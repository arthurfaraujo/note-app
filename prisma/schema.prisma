generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model user {
  nickname   String     @id
  email      String     @unique
  password   String
  name       String
  notes      note[]
  categories category[]
  image      image?
}

model note {
  id           Int       @id @default(autoincrement())
  title        String?
  content      String
  type         Int?
  userNickname String
  user         user      @relation(fields: [userNickname], references: [nickname])
  categoryId   Int?
  category     category? @relation(fields: [categoryId], references: [id])
}

model category {
  id           Int    @id @default(autoincrement())
  name         String
  userNickname String
  user         user   @relation(fields: [userNickname], references: [nickname])
  notes        note[]
}

model image {
  id           Int    @id @default(autoincrement())
  path         String
  user         user   @relation(fields: [userNickname], references: [nickname])
  userNickname String @unique
}
